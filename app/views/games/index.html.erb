<h1>Listing games</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Turn</th>
    <th>Player1</th>
    <th>Player2</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.name %></td>
    <td><%= game.turn %></td>
    <td><%= game.player1 %></td>
    <td><%= game.player2 %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

